FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "<system>/simulationParameters"

application     $SOLVER;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         $ENDTIME;

deltaT          $DELTAT;

writeControl    timeStep;

writeInterval   $WRITEINTERVAL;

purgeWrite      0;

writeFormat     binary;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

adjustTimeStep  yes;

maxCo               $CFL;
maxAlphaCo          $AlphaCFL;

maxDeltaT           1;

functions
{
    forces
    {
        type            forces;
        libs            (forces);
        patches         (hull);
        rhoInf          998.8;
        log             on;
        writeControl    timeStep;
        writeInterval   1;
        CofR            (2.929541 0 0.2);
    }
}


