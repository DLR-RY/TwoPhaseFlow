FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     interFlow;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         0.1;

deltaT          0.001;

writeControl    adjustableRunTime;

writeInterval   0.01;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression compressed;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

adjustTimeStep  yes;

maxCo           0.2;
maxAlphaCo      0.2;
maxCapillaryNum 1e8;

maxDeltaT       1;


functions
{
    maxU
    {
        type            fieldMinMax;
        libs            ("libfieldFunctionObjects.so");
        writeControl    outputTime;
        writeInterval   1;
            // Report the location of the field extrema
        location   no;

        fields          (U);
    }

}

